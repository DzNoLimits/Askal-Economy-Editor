{
    "name": "askal-economy-editor-dev",
    "version": "1.0.0",
    "description": "Development server with auto-reload",
    "scripts": {
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:backend": "nodemon server_v04.js",
        "dev:frontend": "cd ../frontend && npm start",
        "build:frontend": "cd ../frontend && npm run build",
        "start:unified": "npm run build:frontend && nodemon server_unified.js",
        "start:production": "node server_unified.js"
    },
    "dependencies": {
        "express": "^4.18.2",
        "sqlite3": "^5.1.6",
        "cors": "^2.8.5",
        "body-parser": "^1.20.2"
    },
    "devDependencies": {
        "nodemon": "^3.0.1",
        "concurrently": "^8.2.0"
    }
}